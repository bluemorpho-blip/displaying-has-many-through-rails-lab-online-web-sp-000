<h1>Doctor#Show</h1>

<h2><%= @doctor.name %></h2>
<h2>Department: <%= @doctor.department %></h2>

<% @doctor.appointments.each do |appt| %>
  <p>
    <%= appt.appt_datetime %> patient: <%= link_to appt.patient.name, patient_path(appt.patient) %>
  </p>
<% end %>
<p><%= @appointment.appointment_datetime.strftime('%B %d, %Y at %H:%M')%></p>